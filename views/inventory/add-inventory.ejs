<h1><%= title %></h1>
<%- messages() %>
<% if (errors && errors.length) { %>
  <ul><% errors.forEach(e=>{ %><li><%= e.msg %></li><% }) %></ul>
<% } %>

<form id="addInventory" action="/inv/add-inventory" method="post" novalidate>
  <label>Make
    <input type="text" name="inv_make" required value="<%= inv_make || '' %>">
  </label>
  <label>Model
    <input type="text" name="inv_model" required value="<%= inv_model || '' %>">
  </label>
  <label>Year
    <input type="number" name="inv_year" min="1900" max="2100" required value="<%= inv_year || '' %>">
  </label>
  <label>Description
    <textarea name="inv_description" required><%= inv_description || '' %></textarea>
  </label>
  <label>Image Path
    <input type="text" name="inv_image" required value="<%= inv_image || '/images/vehicles/no-image.png' %>">
  </label>
  <label>Thumbnail Path
    <input type="text" name="inv_thumbnail" required value="<%= inv_thumbnail || '/images/vehicles/no-image-tn.png' %>">
  </label>
  <label>Price
    <input type="number" step="0.01" min="0.01" name="inv_price" required value="<%= inv_price || '' %>">
  </label>
  <label>Miles
    <input type="number" min="0" name="inv_miles" required value="<%= inv_miles || '' %>">
  </label>
  <label>Color
    <input type="text" name="inv_color" required value="<%= inv_color || '' %>">
  </label>

  <label>Classification
  <%- classificationSelect %>
  </label>

  <div>
    <input type="submit" value="Save">
  </div>
</form>
