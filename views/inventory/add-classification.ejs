<h1><%= title %></h1>
<%- messages() %>
<% if (errors && errors.length) { %>
  <ul><% errors.forEach(e=>{ %><li><%= e.msg %></li><% }) %></ul>
<% } %>

<form id="addClassification" action="/inv/add-classification" method="post" novalidate>
  <label>Name (no spaces or special chars)
    <input 
        name="classification_name" 
        required 
        pattern="^[A-Za-z0-9_]+$"
        value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>"
        type="text"
        >
  </label>
  <div>
    <input type="submit" value="Save">
  </div>
</form>
