<%# views/inventory/delete-confirm.ejs %>

<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<div class="form-container">
    <p class="delete-warning">Confirm Deletion - This action is permanent and cannot be undone.</p>
    <form id="deleteForm" action="/inv/delete" method="post">
        <fieldset>
            <div class="form-group">
                <label for="inv_make">Make:</label>
                <input type="text" name="inv_make" id="inv_make" readonly value="<%= inv_make %>">
            </div>

            <div class="form-group">
                <label for="inv_model">Model:</label>
                <input type="text" name="inv_model" id="inv_model" readonly value="<%= inv_model %>">
            </div>

            <div class="form-group">
                <label for="inv_year">Year:</label>
                <input type="text" name="inv_year" id="inv_year" readonly value="<%= inv_year %>">
            </div>

            <div class="form-group">
                <label for="inv_price">Price:</label>
                <input type="text" name="inv_price" id="inv_price" readonly value="<%= inv_price %>">
            </div>
            
            <div class="form-group">
                <button type="submit" class="form-button">Delete Vehicle</button>
            </div>

            <input type="hidden" name="inv_id"
                <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                <% } %>>
        </fieldset>
    </form>
</div>